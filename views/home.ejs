<link rel="stylesheet" href="/css/home.css">

<div id="home-container">
    <section id="feed-posts">
        <h4>Posts</h4>
        <% if(locals.user){ %>
            <form action="#" id="new-post-form" method="post">
                <textarea name="content" cols="30" rows="2" placeholder="Type Here ..." required></textarea>
                <input type="submit" value="Post">
            </form>
            <% } %>
                <div id="posts-list-container">
                    <ul>
                        <% for(post of posts) { %>
                        <%- include('_post') -%>
                        <% }; %>
                    </ul>
                </div>

    </section>

    <section id="user-friends">
        <h4>Friends</h4>
        <% for(u of all_users){%>
            <li>
                <a href="/users/profile/<%= u.id %>" class="">
                    <%= u.name %>
                </a>
            </li>
            <%}%>
    </section>

</div>

<script src="/js/home_posts.js"></script>